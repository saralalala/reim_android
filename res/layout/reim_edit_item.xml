<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/baseLayout" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13" >

            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:hint="@string/inputAmount"
                android:inputType="numberDecimal" />

            <requestFocus />

            <CheckBox
                android:id="@+id/proveAheadCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/amountEditText"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/proveAhead" />

            <CheckBox
                android:id="@+id/needReimCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/proveAheadCheckBox"
                android:layout_below="@+id/proveAheadCheckBox"
                android:layout_marginTop="14dp"
                android:text="@string/needReimburse" />

            <ImageView
                android:id="@+id/invoiceImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/amountEditText"
                android:contentDescription="@string/invoice"
                android:scaleType="fitXY"
                android:src="@drawable/splash_image" />

            <TextView
                android:id="@+id/paAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/proveAheadCheckBox"
                android:layout_below="@+id/proveAheadCheckBox"
                android:text="@string/paAmount" />

        </RelativeLayout>

        <Button
            android:id="@+id/categoryButton"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="0.14"
            android:text="@string/chooseCategory" />

        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/vendorButton"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="0.14"
            android:text="@string/chooseVendor" />

        <EditText
            android:id="@+id/vendorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/inputVendor" />

        <Button
            android:id="@+id/locationButton"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="0.14"
            android:text="@string/chooseLocation" />

        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/inputLocation" />

        <Button
            android:id="@+id/tagButton"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:text="@string/chooseTag" />

        <TextView
            android:id="@+id/tagTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/timeButton"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:text="@string/chooseTime" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/memberButton"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:text="@string/chooseMember" />

        <TextView
            android:id="@+id/memberTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/noteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/inputNote" >
        </EditText>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />

    </LinearLayout>

</ScrollView>