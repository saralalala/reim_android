<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/oldPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/inputOldPassword"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oldPasswordEditText"
        android:layout_below="@+id/oldPasswordEditText"
        android:layout_marginTop="40dp"
        android:hint="@string/inputNewPassword"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPasswordEditText"
        android:layout_below="@+id/newPasswordEditText"
        android:layout_marginTop="40dp"
        android:hint="@string/confirmNewPasswordPrompt"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

</RelativeLayout>
