<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/baseLayout" >
    
        <requestFocus />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/confirmButton"
        android:layout_alignRight="@+id/confirmPasswordEditText"
        android:text="@string/cancel" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/newPasswordPrompt"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPasswordEditText"
        android:layout_below="@+id/newPasswordEditText"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="@string/confirmPasswordPrompt"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirmPasswordEditText"
        android:layout_below="@+id/confirmPasswordEditText"
        android:layout_marginTop="41dp"
        android:text="@string/confirm" />

</RelativeLayout>
