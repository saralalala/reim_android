<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/emailBaseLayout"  >

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/inputEmail"
        android:inputType="textEmailAddress"
        android:focusable="true" 
        android:focusableInTouchMode="true">
    	<requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/emailPasswordEditText"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/emailCancelButton"
        android:layout_below="@+id/emailEditText"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/inputPassword"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/emailConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emailCancelButton"
        android:layout_alignBottom="@+id/emailCancelButton"
        android:layout_alignLeft="@+id/emailPasswordEditText"
        android:text="@string/confirm" />

    <Button
        android:id="@+id/emailCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/emailEditText"
        android:layout_centerVertical="true"
        android:text="@string/cancel" />

</RelativeLayout>