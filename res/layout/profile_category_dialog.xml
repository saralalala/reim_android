<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="@string/inputCategoryName" />

    <EditText
        android:id="@+id/limitEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameEditText"
        android:layout_alignRight="@+id/nameEditText"
        android:layout_below="@+id/nameEditText"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="@string/inputCategoryLimit"
        android:inputType="numberDecimal" />

    <CheckBox
        android:id="@+id/proveAheadCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/limitEditText"
        android:layout_alignRight="@+id/limitEditText"
        android:layout_below="@+id/limitEditText"
        android:layout_marginTop="25dp"
        android:text="@string/proveAhead" />

</RelativeLayout>

