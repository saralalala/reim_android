<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" 
    android:background="@drawable/list_item_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/pivotView"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="13sp" />

	    <TextView
	        android:id="@+id/amountTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
	        android:textColor="#FF000000"
	        android:textSize="30sp" />
	    
    </LinearLayout>

    <View
        android:id="@+id/pivotView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/pivotView"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" >

            <ImageView
                android:id="@+id/photoImageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/camera"
                android:contentDescription="@string/invoice" />

            <TextView
                android:id="@+id/reportTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/photoImageView"
                android:paddingLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#FF000000"
                android:textSize="13sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/vendorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FF000000"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>