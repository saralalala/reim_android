<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:background="@drawable/list_item_drawable" >

    <RelativeLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/pivotView"
        android:paddingLeft="16dp" >

        <ImageView
            android:id="@+id/statusImageView"
            android:layout_width="42dp"
            android:layout_height="15dp"
            android:layout_marginTop="9dp"
            android:contentDescription="@string/status" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statusImageView"
            android:gravity="bottom" >

            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/font_major_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/signTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/rmb"
                android:textColor="@color/hint_black"
                android:textSize="16sp" />

        </LinearLayout>
        
    </RelativeLayout>

    <View
        android:id="@+id/pivotView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pivotView"
        android:orientation="vertical"
        android:layout_marginRight="16dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12dp" >

            <ImageView
                android:id="@+id/photoImageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/camera"
                android:contentDescription="@string/invoice" />

            <TextView
                android:id="@+id/reportTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/photoImageView"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/hint_light_grey"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vendorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/font_major_dark"
            android:textSize="20sp" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoLayout"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:gravity="right" >

        <ImageView
            android:id="@+id/categoryImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@string/tag"
            android:src="@drawable/default_icon" />

    </LinearLayout>

</RelativeLayout>