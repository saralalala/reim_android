<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sessionLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/popup_drawable">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/wechat_session"
                android:src="@drawable/wechat_session"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="@string/wechat_session"
                android:textColor="@color/hint_grey"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/momentsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/popup_drawable">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/wechat_moments"
                android:src="@drawable/wechat_moments"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="@string/wechat_moments"
                android:textColor="@color/hint_grey"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>
            
	<include                 
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
	  	layout="@layout/view_divider"/>

	<TextView
	    android:id="@+id/cancelTextView"
	    android:layout_width="match_parent"
	    android:layout_height="56dp"
	    android:gravity="center"
	    android:background="@drawable/popup_drawable"
	    android:text="@string/cancel"
	    android:textColor="@color/button_text_dark_color"
	    android:textSize="18sp"/>

</LinearLayout>
