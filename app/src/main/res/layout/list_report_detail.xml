<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="false"
    android:background="@color/major_light">
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:clickable="false"
	    android:background="@color/major_light">
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="40dp"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="16dp">
	
	        <TextView
	            android:id="@+id/titleTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_toLeftOf="@+id/statusTextView"
	            android:layout_marginRight="14dp"
	            android:textColor="@color/font_major_dark"
	            android:textSize="20sp"/>

	        <TextView
	            android:id="@+id/statusTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginTop="4dp"
	            android:paddingLeft="3dp"
	            android:paddingRight="3dp"
	            android:gravity="center"
	            android:textColor="@color/major_light"/>
	
	    </RelativeLayout>

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp">
			
			<TextView
			    android:id="@+id/timeTextView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
                android:layout_centerVertical="true"
			    android:textColor="@color/hint_grey"
			    android:textSize="14sp"/>
			
			<TextView
			    android:id="@+id/approveInfoTextView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
                android:padding="12dp"
			    android:text="@string/approve_info_hint"
			    android:textColor="@color/major_dark"
			    android:textSize="14sp"/>
			
		</RelativeLayout>
	
	</LinearLayout>
            
	<include                 
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
	  	layout="@layout/view_divider"/>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:orientation="vertical"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
	    android:clickable="false"
	    android:background="@color/major_light">
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	
	        <TextView
	            android:id="@+id/senderPrompt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/sender"
	            android:textColor="@color/hint_grey"
	            android:textSize="14sp"/>
	
	        <TextView
	            android:id="@+id/senderTextView"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:textColor="@color/font_major_dark"
	            android:textSize="14sp"/>
	
	    </LinearLayout>
	
	    <LinearLayout
            android:id="@+id/managerLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="14dp">
	
	        <TextView
	            android:id="@+id/managerPrompt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/approver"
	            android:textColor="@color/hint_grey"
	            android:textSize="14sp"/>
	
	        <TextView
	            android:id="@+id/managerTextView"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:textColor="@color/font_major_dark"
	            android:textSize="14sp"/>
	
	    </LinearLayout>
	
	    <LinearLayout
            android:id="@+id/ccLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="14dp">
	
	        <TextView
	            android:id="@+id/ccPrompt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/cc"
	            android:textColor="@color/hint_grey"
	            android:textSize="14sp"/>
	
	        <TextView
	            android:id="@+id/ccTextView"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:textColor="@color/font_major_dark"
	            android:textSize="14sp"/>
	
	    </LinearLayout>
	
	</LinearLayout>
            
	<include                 
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
	  	layout="@layout/view_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

	    <TextView
            android:id="@+id/totalTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="22dp"
	        android:layout_marginBottom="22dp"
	        android:layout_marginLeft="16dp"
	        android:text="@string/total_amount"
	        android:textColor="@color/hint_grey"
	        android:textSize="14sp"/>
	
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical"
	        android:gravity="bottom"
	        android:layout_marginLeft="14dp">
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/rmb_symbol"
	            android:textColor="@color/font_major_dark"
	            android:textSize="16sp"/>

            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/font_reim_number"
                android:textSize="24sp"/>
	
	    </LinearLayout>
	
	    <TextView
	        android:id="@+id/itemCountTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="22dp"
	        android:layout_marginBottom="22dp"
	        android:layout_marginLeft="14dp"
	        android:layout_marginRight="16dp"
	        android:text="@string/item_count"
	        android:textColor="@color/hint_grey"
	        android:textSize="14sp"/>
    
    </LinearLayout>

</LinearLayout>
